{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "lib": ["ES2020"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "paths": {
      "rollup/loadConfigFile": ["./src/types/loadConfigFile.d.ts"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", "lib"]
}
